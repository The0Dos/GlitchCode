<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".level1_1"
    android:background="@drawable/back_main">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:src="@drawable/comics1_1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_main"
                android:textSize="30sp"
                android:textColor="@android:color/white"
                android:text="Стоило ли открывать ссылку?"
                android:layout_marginBottom="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/yes1_1"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_margin = "10dp"
                    android:background="@drawable/choice_btn"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:text="Да"
                    android:fontFamily="@font/font_main"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"/>
                <TextView
                    android:id="@+id/no1_1"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_margin = "10dp"
                    android:background="@drawable/choice_btn"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:text="Нет"
                    android:fontFamily="@font/font_main"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"/>


            </LinearLayout>
            <TextView

                android:visibility="invisible"
                android:id="@+id/threed"
                android:clickable="true"
                android:focusable="true"
                android:onClick="open3d"
                android:layout_margin = "10dp"
                android:background="@drawable/choice_btn"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Осмотреть 3д модель"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/font_main"
                android:textSize="20sp"
                android:textColor="@android:color/white"/>





        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>