<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:background="@drawable/back_main"
    >

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/font_main"
                android:text="УЧЕБНИК"
                android:gravity="center"

                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/font_main"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ясно и просто обо всем, что касается вашей безопасности."
                android:textColor="@android:color/white"
                android:textSize="25sp"/>

            <TextView
                android:layout_margin="15dp"
                android:fontFamily="@font/font_main"
                android:gravity="center|left"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ваши уроки"
                android:textColor="@android:color/white"
                android:textSize="36sp"/>
            <View
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"

                android:id="@+id/lvl1_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ghost"
                    android:gravity="center"
                    android:layout_weight="1"

                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="0dp"
                    android:layout_height="120dp" />
                <LinearLayout
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:orientation="vertical">
                    <TextView
                        android:text="Как не попасть на скам в интернете"
                        android:textColor="@android:color/white"
                        android:textSize="25sp"
                        android:fontFamily="@font/font_main"
                        android:gravity="center"
                        android:layout_weight="3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_marginLeft="20dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:src="@drawable/time"/>
                            <TextView
                                android:layout_weight="2"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="1-5 минут"
                                android:textSize="25sp"
                                android:gravity="center"
                                android:textColor="#8C9098"/>


                        </LinearLayout>





                    </LinearLayout>






                </LinearLayout>




            </LinearLayout>

            <View
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/lvl1_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/rassilki"
                    android:gravity="center"
                    android:layout_weight="1"

                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="0dp"
                    android:layout_height="120dp" />
                <LinearLayout
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:orientation="vertical">
                    <TextView
                        android:text="Что такое рассылки на почте?"
                        android:textColor="@android:color/white"
                        android:textSize="25sp"
                        android:fontFamily="@font/font_main"
                        android:gravity="center"
                        android:layout_weight="3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_marginLeft="20dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:src="@drawable/time"/>
                            <TextView
                                android:layout_weight="2"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="5-10 минут"
                                android:textSize="25sp"
                                android:gravity="center"
                                android:textColor="#8C9098"/>


                        </LinearLayout>






                    </LinearLayout>






                </LinearLayout>




            </LinearLayout>

            <View
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/lvl1_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ip_pog"
                    android:gravity="center"
                    android:layout_weight="1"

                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="0dp"
                    android:layout_height="120dp" />
                <LinearLayout
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:orientation="vertical">
                    <TextView
                        android:text="Как скрыть свой IP адрес"
                        android:textColor="@android:color/white"
                        android:textSize="25sp"
                        android:fontFamily="@font/font_main"
                        android:gravity="center"
                        android:layout_weight="3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_marginLeft="20dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:src="@drawable/time"/>
                            <TextView
                                android:layout_weight="2"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="10-15 минут"
                                android:textSize="25sp"
                                android:gravity="center"
                                android:textColor="#8C9098"/>


                        </LinearLayout>






                    </LinearLayout>






                </LinearLayout>




            </LinearLayout>

            <View
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>


        </LinearLayout>





    </ScrollView>

</FrameLayout>